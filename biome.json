{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
        "include": ["frontend", "backend"],
        "ignore": [".venv", ".git", "node_modules"]
    },
    "javascript": {
        "formatter": {
            "lineWidth": 100,
            "indentWidth": 4,
            "indentStyle": "space",
            "quoteStyle": "double",
            "jsxQuoteStyle": "double",
            "semicolons": "always",
            "arrowParentheses": "always",
            "trailingCommas": "es5"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "globals": ["document", "window", "fetch", "alert"]
    },
    "json": {
        "formatter": {
            "indentWidth": 4,
            "indentStyle": "space",
            "lineWidth": 100
        }
    },
    "css": {
        "formatter": {
            "indentWidth": 4,
            "indentStyle": "space",
            "lineWidth": 100
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "warn"
            }
        }
    }
}
